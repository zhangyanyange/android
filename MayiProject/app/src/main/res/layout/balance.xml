<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:id="@+id/ll_net_request"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <com.github.ybq.android.spinkit.SpinKitView
            style="@style/SpinKitView.Large.Circle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/colorAccent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#ff4081"
            android:text="加载中..."
            />
    </LinearLayout>
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="match_parent">
<RelativeLayout
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="购物车"
        android:layout_centerInParent="true"
        android:padding="5dp"
        android:textColor="#000"
        />


</RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_quanxuan"
        android:visibility="visible"
        android:layout_marginTop="3dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/cb_all"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="3dp"
            android:button="@null"
            android:layout_marginLeft="5dp"
            android:background="@drawable/check_selector"
            />
<TextView
    android:layout_alignLeft="@id/cb_all"
    android:gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:text="全选"
    android:padding="3dp"
    android:layout_marginLeft="3dp"
    android:textColor="#000"
    android:textSize="16sp"
    />
    </LinearLayout>
    <ListView
        android:layout_marginTop="3dp"
        android:id="@+id/shopcar"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="match_parent"
        android:divider="#f5f5f5"
        android:dividerHeight="2dp"
        android:descendantFocusability="beforeDescendants"
        >
    </ListView>

</LinearLayout>

    <LinearLayout
        android:id="@+id/ll_all"
        android:visibility="gone"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_marginLeft="3dp"
            android:orientation="horizontal"
            android:background="#F8F8FF"
            android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/tv_privetotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="合计:"
            android:padding="15dp"
            android:textSize="13sp"
            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="4">
            <TextView
                android:id="@+id/tv_delect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF4500"
                android:textColor="#fff"
                android:textSize="15sp"
                android:text="删除"
                android:gravity="center"
                />
        <TextView
            android:id="@+id/tv_totalAll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff0000"
            android:textColor="#fff"
            android:textSize="15sp"
            android:text="结算"
            android:gravity="center"
            />
        </LinearLayout>
    </LinearLayout>
