<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/activity_result_back"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#f5f5f5"
	tools:context="com.myygjc.ant.project.activity.ResultBackActivity">

	<RelativeLayout
		android:id="@+id/rl_fukuan"
		android:background="#fff"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<ImageButton
			android:id="@+id/back"
			android:layout_marginLeft="9dp"
			android:background="@drawable/back"
			android:layout_centerVertical="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<TextView
			android:padding="10dp"
			android:textSize="16sp"
			android:textColor="#000"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="付款结果"
			/>
	</RelativeLayout>
	<LinearLayout
		android:id="@+id/ll_result"
		android:background="#fff"
		android:layout_marginTop="1dp"
		android:layout_width="match_parent"
		android:layout_below="@id/rl_fukuan"
		android:orientation="vertical"
		android:gravity="center"
		android:layout_height="70dp">
		<ImageView
			android:id="@+id/zhifutu"
			android:background="@drawable/lvselogo"
			android:layout_width="40dp"
			android:layout_height="40dp" />
		<TextView
			android:id="@+id/zhifuweizi"
			android:layout_marginTop="3dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="支付结果"
			/>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/ll_ordernum"
		android:layout_below="@id/ll_result"
		android:layout_margin="15dp"
		android:background="@drawable/bg_map_button"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:padding="4dp"
		android:layout_height="wrap_content">


		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_width="70dp"
				android:layout_height="wrap_content"
				android:text="订单号"
				android:gravity="center"
				android:textColor="#616161"
				android:textSize="18sp"
				/>
			<TextView
				android:id="@+id/order_number"
				android:layout_marginLeft="3dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="#000"
				android:textSize="18sp"
				android:text="1233232312323"
				/>
		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_width="70dp"
				android:layout_height="wrap_content"
				android:text="总计"
				android:gravity="center"
				android:textColor="#616161"
				android:textSize="13sp"
				/>
			<TextView
				android:id="@+id/total_money"
				android:layout_marginLeft="3dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="#f00"
				android:textSize="13sp"
				android:text="12"
				/>
		</LinearLayout>


	</LinearLayout>
</RelativeLayout>
