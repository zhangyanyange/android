        <LinearLayout
            android:id="@+id/ll_location"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/et_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名字"
                    android:padding="3dp"
                    android:textSize="14sp"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/et_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话"
                    android:padding="3dp"
                    android:textSize="14sp"
                    android:layout_marginLeft="17dp"
                    android:textColor="#000"
                    />
            </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:padding="3dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/zuobiao"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/et_sendlocation"
                        android:layout_marginLeft="3dp"
                        android:layout_width="wrap_content"
                        android:textColor="#000"
                        android:layout_height="wrap_content"
                        android:text="地址"
                        android:layout_gravity="center_vertical"
                        android:textSize="15sp"
                        />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_width="22dp"
                android:background="@drawable/message_normal"
                android:layout_height="22dp" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@drawable/fengexian"
            />
        <LinearLayout
            android:padding="5dp"
            android:background="#fff"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="备注"
                android:textSize="14sp"
                android:textColor="#000"
                android:gravity="center"
                />
            <EditText
                android:textColor="#000"
                android:background="@null"
                android:singleLine="true"
                android:id="@+id/et_remove"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="如有特殊要求,请填写备注"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_sendtime"
            android:padding="5dp"
            android:background="#fff"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="送达时间"
                android:textSize="14sp"
                android:textColor="#000"
                android:gravity="center"
                />
            <TextView
                android:layout_marginLeft="3dp"
                android:singleLine="true"
                android:id="@+id/et_sendtime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#000"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:background="#fff"
            android:layout_marginTop="3dp"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="是否自提"
                android:textSize="14sp"
                android:textColor="#000"
                android:gravity="center"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_height="match_parent">

                <CheckBox
                    android:textColor="#000"
                    android:id="@+id/cb_self"
                    android:button="@null"
                    android:background="@drawable/check_money"
                    android:layout_width="18dp"
                    android:checked="true"
                    android:layout_height="18dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_sfby"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:background="#fff"
            android:layout_marginTop="3dp"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="需要搬运"
                android:textSize="14sp"
                android:textColor="#000"
                android:gravity="center"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_height="match_parent">

                <CheckBox
                    android:checked="true"
                    android:textColor="#000"
                    android:id="@+id/cb_sfby"
                    android:button="@null"
                    android:background="@drawable/check_money"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_distance"
            android:padding="5dp"
            android:background="#fff"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:singleLine="true"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="倒运距离"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="#000"
                android:gravity="center"
                />
            <EditText
                android:singleLine="true"
                android:textColor="#000"
                android:background="@null"
                android:layout_gravity="center"
                android:id="@+id/et_seconddistance"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:text="m"
                />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_stair"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="电梯层数"
                android:textColor="#000"
                android:gravity="center"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_height="match_parent">
            <CheckBox
                android:id="@+id/rb_count1"
                android:button="@null"
                android:layout_centerVertical="true"
                android:background="@drawable/check_money"
                android:layout_width="18dp"
                android:layout_height="18dp"
                />
            </RelativeLayout>
            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="楼梯层数"
                android:textColor="#000"
                android:gravity="center"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_height="match_parent">
            <CheckBox
                android:textColor="#000"
                android:id="@+id/rb_count2"
                android:button="@null"
                android:background="@drawable/check_money"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                />
                </RelativeLayout>
            <EditText
                android:background="@null"
                android:singleLine="true"
                android:id="@+id/et_countstair"
                android:layout_marginLeft="30dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="17sp"
               android:layout_gravity="center"
                android:hint="0"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="层"
                android:textSize="17sp"
                android:phoneNumber="true"
                android:textColor="#000"
                android:layout_gravity="center"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>