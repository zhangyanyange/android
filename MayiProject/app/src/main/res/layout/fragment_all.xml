<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.myygjc.ant.project.view.HorizontalListView
        android:layout_marginLeft="3dp"
        android:layout_marginTop="1dp"
        android:id="@+id/fenlei1"
        android:layout_width="match_parent"
        android:layout_marginRight="3dp"
        app:paddingEnd="10dp"
        android:layout_height="32dip"
        />

    <com.myygjc.ant.project.view.HorizontalListView
        android:layout_marginLeft="3dp"
        android:layout_marginTop="1dp"
        android:id="@+id/fenlei2"
        android:layout_width="match_parent"
        android:layout_height="32dip"
        />


    <com.myygjc.ant.project.view.HorizontalListView
        android:layout_marginLeft="3dp"
        android:layout_marginTop="1dp"
        android:id="@+id/fenlei3"
        android:layout_width="match_parent"
        android:layout_height="32dip"
       />

    <com.myygjc.ant.project.view.SwipeRefreshView
        android:layout_marginTop="1dp"
        android:id="@+id/swipe_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ListView
        android:id="@+id/lv_fenlei"
        android:divider="#f5f5f5"
        android:dividerHeight="2dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</com.myygjc.ant.project.view.SwipeRefreshView>
</LinearLayout>