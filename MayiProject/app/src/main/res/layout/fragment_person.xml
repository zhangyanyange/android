<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="3dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/touxiang"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/af_ugc_icon_user"
            android:layout_centerHorizontal="true"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>

        <TextView
          android:layout_below="@id/touxiang"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerInParent="true"
            android:text="登陆/注册"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_money"
        android:layout_marginTop="3dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/a_wallet"
                />

            <TextView
                android:id="@+id/money_shenyu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:text="账户额度"
                android:textColor="#000"
                />

        </LinearLayout>

        <ImageView
            android:layout_marginRight="3dp"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/message_normal"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_location"
        android:layout_marginTop="3dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/location"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:text="地址管理"
                android:textColor="#000"
                />

        </LinearLayout>

        <ImageView
            android:layout_marginRight="3dp"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/message_normal"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_orderstate"
        android:layout_marginTop="3dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/a_order"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:text="我的订单"
                android:layout_marginLeft="10dp"
                android:textColor="#000"
                android:id="@+id/textView" />
        </LinearLayout>

        <ImageView
            android:layout_marginRight="3dp"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/message_normal"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_yue"
        android:layout_marginTop="3dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/a_collect"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:text="我的余额"
                android:textColor="#000"
                />

        </LinearLayout>

        <ImageView
            android:layout_marginRight="3dp"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/message_normal"
            />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/call_kefu"
        android:layout_marginTop="3dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/lianxikefu"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:text="联系客服"
                android:textColor="#000"
                />
        </LinearLayout>
        <ImageView
            android:layout_marginRight="3dp"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/message_normal"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/call_phone"
        android:layout_marginTop="3dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/appoint"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:text="联系业务员"
                android:textColor="#000"
                />
        </LinearLayout>
        <ImageView
            android:layout_marginRight="3dp"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/message_normal"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_version"
        android:layout_marginTop="3dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginRight="3dp"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/message_normal"
            />

        <LinearLayout
            android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
         <ImageView
             android:id="@+id/iv_or"
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:background="@drawable/a_edition"
             />
     <TextView
         android:layout_marginLeft="10dp"
         android:id="@+id/rb_banben"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:textSize="15sp"
         android:text="检查/更新本版号"
         android:textColor="#000"
         />
         </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#FF4500"
        android:layout_marginTop="9dp"
        android:id="@+id/loginout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:text="退出登陆"
            android:textColor="#fff"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>