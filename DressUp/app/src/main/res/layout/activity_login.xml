<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mvc.dresssup.activity.LoginActivity">

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/loadView"
        android:layout_height="35dp"
        android:layout_width="35dp"
        android:indeterminateDuration="900"
        style="@style/style_progressbar"
        android:layout_centerInParent="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:id="@+id/rl_fukuan"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/back"
            android:layout_marginLeft="9dp"
            android:background="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登陆"
            />
    </RelativeLayout>
<ImageView
    android:id="@+id/iv_login"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_width="match_parent"
    android:layout_height="70dp"
   android:background="#58B861"
    />
<RelativeLayout
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    >
<EditText
    android:id="@+id/et_phone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#000"
    android:textColorHint="#E5E5E5"
    android:hint="请输入手机号"
    android:inputType="phone|number"
    android:maxLength="11"
    android:background="@drawable/type_grey"
    android:padding="5dp"
    />
    <TextView
        android:id="@+id/et_sendyzm"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="#bdbdbd"
        android:text="获取验证码"
        android:textColor="#fff"
        android:padding="3dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp"
        />
</RelativeLayout>
        <EditText
            android:id="@+id/et_yzm"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="#E5E5E5"
            android:hint="请输入验证码"
            android:inputType="number"
            android:background="@drawable/type_grey"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="#bdbdbd"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="17sp"
            android:padding="5dp"
            android:gravity="center"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:id="@+id/sanfang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="第三方登录"
            android:layout_centerHorizontal="true"
            />
        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_below="@id/sanfang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/qq"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/qq"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_below="@id/qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQ"
                    android:textColor="#000"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/weixin"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/weixin"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_below="@id/weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信"
                    android:textColor="#000"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
