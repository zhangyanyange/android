<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_classification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mvc.dresssup.activity.ClassificationActivity">
    <ProgressBar
        android:id="@+id/loadView"
        android:layout_height="25dp"
        android:layout_width="25dp"
        android:indeterminateDuration="900"
        android:layout_marginBottom="15dp"
        style="@style/style_progressbar"
       android:layout_centerInParent="true"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout

            android:id="@+id/rl_fukuan"
            android:background="#00ffffff"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageButton
                android:id="@+id/back"
                android:layout_marginLeft="16dp"
                android:background="@drawable/back"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_brand"
                android:padding="10dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="涂料"
                />
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_brand"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            />
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ListView
                android:id="@+id/pinpai"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:background="#f4f4f4"
                >
            </ListView>


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#cdcdcd" />
            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            </android.support.v4.view.ViewPager>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
