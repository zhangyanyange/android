<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/product_picture"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/product_name"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#000"
        android:lines="2"
        android:ellipsize="end"
        android:text="商品名称"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/sale_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="￥120"
            android:textColor="#f00"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:id="@+id/market_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="￥120"
            android:textColor="#333333"
            />

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="5折"
            android:textSize="14sp"
            android:background="#F5B950"
            android:padding="1dp"
            android:textColor="#fff"
            android:id="@+id/zhekou"
            />
    </LinearLayout>
        <TextView
            android:id="@+id/buy_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已售:10"
            android:textSize="12sp"
           android:layout_centerVertical="true"
           android:layout_alignParentEnd="true"
            android:layout_marginLeft="180dp"
            />
    </RelativeLayout>
    <View
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f1f4f6"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="6dp"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="购买数量"
        android:textColor="#000"
        android:padding="6dp"
       android:layout_centerVertical="true"
        />

        <com.mvc.dresssup.view.AmountView
            android:id="@+id/amount_view"
            android:layout_width="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_height="36dp"
            app:btnTextSize="14sp"
            app:btnWidth="36dp"
            app:tvWidth="50dp"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
</LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18sp"
        android:gravity="center"
        android:text="联系客服"
        android:textColor="#fff"
        android:background="#EB5E29"
        android:padding="10dp"
        android:id="@+id/connet_kefu"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18sp"
        android:gravity="center"
        android:text="加入购物车"
        android:textColor="#fff"
        android:background="#F5B950"
        android:padding="10dp"
        android:id="@+id/add_car"
        />
</LinearLayout>
    <ProgressBar
        android:id="@+id/loadView"
        android:layout_height="25dp"
        android:layout_width="25dp"
        android:indeterminateDuration="900"
        android:layout_marginBottom="15dp"
        style="@style/style_progressbar"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />
</RelativeLayout>