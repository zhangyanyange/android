<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_material_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.microfeel.meiquetiliao.activity.MaterialDetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:padding="6dp"
        android:background="#f9f9f9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/back"
            android:layout_marginLeft="2dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textColor="#333"
                android:textSize="16sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="明细"
                android:textColor="#333"
                android:textSize="18sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv__lookphoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看照片"
            android:textColor="#333"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="13dp"
            android:layout_marginRight="4dp"
            />
</RelativeLayout>
<LinearLayout
  android:id="@+id/ll_detail"
    android:layout_marginTop="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_setting_grade"
        android:layout_gravity="center_vertical"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8c8c8c"
                android:text="王建宝"
                android:textSize="16sp"
                />
            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8c8c8c"
                android:text="王建宝"
                android:textSize="16sp"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8c8c8c"
            android:text="王建宝"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_location"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8c8c8c"
            android:text="王建宝"
            android:textSize="16sp"
            />
    </LinearLayout>
</LinearLayout>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/fenge"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/lv_material"
        ></ListView>

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="确认"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#fff"
        android:background="#f00"
        />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/loadView"
        android:layout_height="25dp"
        android:layout_width="25dp"
        android:indeterminateDuration="900"
        android:layout_marginBottom="15dp"
        style="@style/style_progressbar"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />
</RelativeLayout>