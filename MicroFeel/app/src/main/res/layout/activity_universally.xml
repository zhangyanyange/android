<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_universally"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f4f6"
    android:orientation="vertical"
    tools:context="com.mvc.microfeel.activity.UniversallyActivity">
    <RelativeLayout
        android:id="@+id/rl_fukuan"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/back"
            android:layout_marginLeft="9dp"
            android:background="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/creal_cache"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_setting_clear_cache"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:text="清理缓存"
            android:textColor="#000"
            />

    </LinearLayout>
    </RelativeLayout>

    <RelativeLayout

        android:layout_marginTop="3dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_setting_share_jike"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:text="推荐给朋友"
                android:textColor="#000"
                />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout

        android:layout_marginTop="3dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_setting_grade"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:text="给评分"
                android:textColor="#000"
                />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
    android:id="@+id/logout"
        android:layout_marginTop="3dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_setting_log_out"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:text="退出登录"
                android:textColor="#000"
                />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
